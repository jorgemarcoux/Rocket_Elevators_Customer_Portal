			<div class="row">
				<!-- FORM -->
					<div class="container col-5 mb-5 text-center">
                     <form action="/interventions" method="POST" enctype="multipart/form-data" id="intForm">

                       <br/>
                       <br/>
                       <label for="building_id" class="bg-danger text-white" id="build_label">Select Building</label>
                       <br/>
					             <select id="select_build" >
                       </select>
                       <br/>
                       <br/>
                       <label for="battery_id" class="bg-danger text-white" id="bat_label">Select Battery</label>
                       <br/>
					               <select id="select_bat" >
                         </select>
                       <br/>
                       <br/>
                       <label for="column_id" class="bg-danger text-white" id="col_label">Select Column</label>
                       <br/>
					               <select id='select_col' >
                         </select>
                       <br/>
                       <br/>
                       <label for="elevator_id" class="bg-danger text-white" id="elev_label">Select Lift</label>
                       <br/>
					               <select id="select_elev">
                         </select>
                       <br/>
                       <br/>
                       <label for="report">Intervention Description</label>
