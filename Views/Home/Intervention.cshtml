                       <input name="author" id="current_author" class="d-none" value=""> 
                       <br/>
                       <button type="submit" class="btn btn-danger" id="btnInter" style="background-color:#EB2C55;"><i class="fa fa-check"></i>SUBMIT</button>                  
                    </form>

